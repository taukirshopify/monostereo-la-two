
<section class="featued-bannar-2">
    <div class="container">
     <div class="row">
        {% for block in section.blocks %}
            <div class="col-md-4">
              <div class="featued-bannar-wrapper">
                <div class="featued-bannar-img">
                   <img src="{{ block.settings.img | img_url:'' }}" alt="">
                </div>
                <div class="featued-bannar-content-2">
                  
                  <a href="{{ block.settings.btn_link }}" class="btn">{{block.settings.btn}}   {% include 'featued-arrow' %}</a>
                </div>
             </div>
    
            </div>
         {% endfor %}
    
    
    
     </div>
     </div>
    
    
    </section>
    
    
    
    {% schema %}
        {
            "name": "Featued Bannar 02",
            "class": "bannar-02",
            "blocks": [
                {
                    "type": "bannar",
                    "name": "Featued Bannar",
                    "settings": [
                        {
                            "type": "image_picker",
                            "id": "img",
                            "label": "Bannar image"
                        },
                        {
                            "type": "text",
                            "id": "h3",
                            "label": " Bannar Title"
                        },
                        {
                            "type": "text",
                            "id": "btn",
                            "default": "Shop Accessories",
                            "label": " Bannar button title"
                        },
                        {
                            "type": "url",
                            "id": "btn_link",
                            "label": " Bannar Button link"
                        }
                    ]
                }
            ],
            
            "presets": [
                {
                    "name": "Featued Bannar 02"
                }
            ]
        }
    {% endschema %}
    
    
    
    <style>
    
    
    .featued-bannar-2 img{
     width: 100%;
    }
    
   .featued-bannar-2 .featued-bannar-content-2 {
        position: absolute;
        bottom: 0;
        right: 0;
        color: #fff;
        font-weight: bold;
       
        font-size: 25px;
        
        text-align: center;
    }
    .featued-bannar-2  .featued-bannar-wrapper {
        position: relative;
     
    }
    
    
    .featued-bannar-2  .featued-bannar-content-2 a.btn {
        padding: 18px 31px;
        font-family: 'JMH Typewriter dry';
        font-style: normal;
        font-weight: 400;
        font-size: 19px;
        color: #000;
        background: rgba(255, 255, 255, 0.5);
backdrop-filter: blur(3.5px);
      
    }
    .featued-bannar-2  .featued-bannar-content-2 a.btn:hover {
      
       
        color: #000;
        
    }

    </style>